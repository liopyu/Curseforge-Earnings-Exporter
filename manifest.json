{
  "manifest_version": 3,
  "name": "CurseForge Earnings Exporter",
  "version": "0.0.1",
  "description": "Exports CurseForge Author Rewards transactions to a PDF summary.",
  "permissions": [],
  "host_permissions": [
    "https://authors.curseforge.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://authors.curseforge.com/*"
      ],
      "js": [
        "content.js",
        "exporter/status.js",
        "exporter/utils.js",
        "exporter/pagination.js",
        "exporter/breakdown.js",
        "exporter/parse.js",
        "exporter/pdf.js",
        "exporter/index.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}